@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Movie Name   : @Model.Name</li>
    <li>Movie Genre  : @Model.Genre.Name</li>
    <li>Movie Released Date  : @Model.ReleasedDate.ToShortDateString()</li>
</ul>

